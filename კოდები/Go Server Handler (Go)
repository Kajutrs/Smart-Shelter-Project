// სენსორების მონაცემების მიმღები ფუნქცია
func sensorDataHandler(w http.ResponseWriter, r *http.Request) {
    if r.Method == http.MethodPost {
        var data struct {
            Temp float64 `json:"temp"`
            Dist int     `json:"dist"`
        }
        // JSON მონაცემების წაკითხვა
        if err := json.NewDecoder(r.Body).Decode(&data); err == nil {
            currentTemperature = data.Temp
            currentDistance = data.Dist
            fmt.Printf("Received: %.2f°C, %dmm\n", data.Temp, data.Dist)
        }
    }
}
