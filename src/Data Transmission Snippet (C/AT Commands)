// მონაცემთა გაგზავნა ESP-01-ის გამოყენებით
void Send_Telemetry(float temp, int dist) {
    char post_req[128];
    // JSON ფორმატის მომზადება
    sprintf(post_data, "{\"temp\": %.2f, \"dist\": %d}", temp, dist);
    
    // AT ბრძანებების თანმიმდევრობა
    UART_Send("AT+CIPSTART=\"TCP\",\"192.168.1.100\",8080\r\n"); // სერვერთან დაკავშირება
    HAL_Delay(500);
    UART_Send("AT+CIPSEND=..."); // მონაცემების ზომის გაგზავნა
    UART_Send(post_data);         // თავად ტელემეტრიის გაგზავნა
}
